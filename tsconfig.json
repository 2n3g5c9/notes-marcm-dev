{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "strictNullChecks": false,
    "isolatedModules": false,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "public", ".cache", "src/**/*.js", "src/**/*.jsx"]
}
